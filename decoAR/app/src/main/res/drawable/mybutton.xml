<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#2C423F" />
            <gradient android:angle="-90" android:startColor="#B6CECB" android:endColor="#EBF5EE"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <solid android:color="#2e675e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <gradient android:angle="45" android:startColor="#B6CECB" android:centerColor="#EBF5EE" android:endColor="#B6CECB" />
        </shape>
    </item>
</selector>